<div class="container" style="max-width: 600px;">
  <div id="<%= dom_id course %>" style="border: 1px solid #ccc; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1); margin-bottom: 20px;">
    <h3 style="text-align: center; margin-bottom: 20px;">Course Details</h3>
    
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <strong>Course title:</strong>
          <%= course.course_title %>
        </div>

        <div class="form-group">
          <strong>Description:</strong>
          <%= course.description %>
        </div>

        <div class="form-group">
          <strong>Course code:</strong>
          <%= course.course_code %>
        </div>

        <div class="form-group">
          <strong>Credits:</strong>
          <%= course.credits %>
        </div>

        <div class="form-group">
          <strong>Faculty Id:</strong>
          <%= course.faculty_id %>
        </div>

        <div class="form-group">
        
          <%= link_to "Back", courses_path,class: "btn btn-secondary"%>
        </div>

      </div>
    </div>
  </div>
</div>
