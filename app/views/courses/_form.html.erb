<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>
      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container" style="max-width: 600px;">
    <div class="form-group">
      <%= form.label :course_title, style: "display: block; font-weight: bold;" %>
      <%= form.text_field :course_title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description, style: "display: block; font-weight: bold;" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :course_code, style: "display: block; font-weight: bold;" %>
      <%= form.text_field :course_code, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :credits, style: "display: block; font-weight: bold;" %>
      <%= form.number_field :credits, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :Faculty_id, style: "display: block; font-weight: bold;" %>
      <%= form.number_field :faculty_id, class: "form-control" %>
    </div>

    <div class="form-group" style="text-align: center;">
      <%= form.submit "Save Course", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
