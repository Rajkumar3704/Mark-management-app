<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with(model: faculty) do |form| %>
        <% if faculty.errors.any? %>
          <div style="color: red;">
            <h2><%= pluralize(faculty.errors.count, "error") %> prohibited this faculty from being saved:</h2>
            <ul>
              <% faculty.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :first_name, class: "form-label", style: "display: block;" %>
          <%= form.text_field :first_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :last_name, class: "form-label", style: "display: block;" %>
          <%= form.text_field :last_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :Faculty_id, class: "form-label", style: "display: block;" %>
          <%= form.number_field :Faculty_id, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :gender, class: "form-label", style: "display: block;" %>
          <%= form.select :gender, options_for_select(['Male', 'Female', 'Other']), {}, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :dob, class: "form-label", style: "display: block;" %>
          <%= form.date_field :dob, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :address, class: "form-label", style: "display: block;" %>
          <%= form.text_area :address, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :email, class: "form-label", style: "display: block;" %>
          <%= form.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :phone, class: "form-label", style: "display: block;" %>
          <%= form.number_field :phone, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :department, class: "form-label", style: "display: block;"%>
          <%= form.select :department, options_for_select(['Computer Science', 'Mechanical Engineering', 'Electrical Engineering', 'Civil Engineering', 'Chemical Engineering', 'Mathematics', 'Physics', 'Chemistry']), {}, class: "form-control" %>
        </div>

        <div>
          <%= form.number_field :user_id, type: :hidden, value: current_user.id %>
        </div>

        <div class="form-group">
          <%= form.submit "Submit", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
