<div class="container" style="max-width: 600px; margin: 0 auto;">
  <div id="<%= dom_id faculty %>" style="border: 1px solid #ccc; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
    <h3 style="text-align: center; margin-bottom: 20px;">Faculty Details</h3>
    
    <p style="margin: 0 0 10px;">
      <strong>First name:</strong>
      <%= faculty.first_name %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Last name:</strong>
      <%= faculty.last_name %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Faculty ID:</strong>
      <%= faculty.Faculty_id %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Gender:</strong>
      <%= faculty.gender %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Dob:</strong>
      <%= faculty.dob %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Address:</strong>
      <%= faculty.address %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Email:</strong>
      <%= faculty.email %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Phone:</strong>
      <%= faculty.phone %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Department:</strong>
      <%= faculty.department %>
    </p>

    <% if current_user.id == faculty.user_id %> 
      <%= link_to "Edit", edit_faculty_path(faculty), class: "btn btn-warning" %>
    <% else %>
      <%= link_to "Back", faculties_path, class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>
