<html>
<head>
    <title>Registration Page Design</title>
    <%= stylesheet_link_tag "demo" %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    </head>

<body>
   
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="container">
            <div class="row">
                <div class="col-md-10 offset=md-1">
                    <div class="row">
                        <div class="col-md-5 register-left">
                            <h3> Already Registered! </h3>
                            <p> Register in our webpage  </p>
                             <%= link_to "Login", new_user_session_path, class: "btn btn-primary" %>

                        </div>
                        <div class="col-md-7 register-right">
                            <h2> Register Here </h2>
                            <div class="register-form">
                                <div class="form-group">
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control", placeholder: "Enter Email "%>
                                </div>

                        <!--

                                    <% if user_signed_in? and current_user.email == "admin@in" %>
                                            <div class="form-group">
                                                <%= f.select :role, [['Faculty', 'faculty']], {}, { class: 'form-control', id: 'signupRole' } %>
                                            </div>

                                    <% else %>
                                            <div class="form-group">
                                                <%= f.select :role, [['Student', 'student']], {}, { class: 'form-control', id: 'signupRole' } %>
                                            </div>
                                            
                                    <% end %>

                        -->
                               <div class="form-group">
                                    <%= f.select :role, [['Student', 'student'],['Faculty', 'faculty']], {}, { class: 'form-control', id: 'signupRole' } %>
                                </div>

                                <div class="form-group">
                                 <%= f.password_field :password, autocomplete: "new-password",class: "form-control", placeholder: "Enter password" %>
                                 </div>
                                <div class="form-group">
                                       <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "form-control", placeholder: "Re-Enter password"%>
                                </div>
                                
                                <%= f.submit "Sign up" ,class: "btn btn-primary"%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <% end %>
</body>

</html>

