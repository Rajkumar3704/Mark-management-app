<h1>Courses</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th scope="col">Course_Title</th>
      <th scope="col">Course_code</th>
      <th scope="col">Credits</th>
      <th collapse="2"></th>
    </tr>
  </thead>
  <tbody>
     <% @course_students.each do |course_student| %>
      <% if course_student.s_id == current_user.id %> 
      <% sel_course = Course.find_by(id: course_student.c_id) %>
      <% if sel_course %>
      <tr>
        <td><%= sel_course.course_title %></td>
        <td><%=  sel_course.course_code %></td>
        <td><%= sel_course.credits %></td>
       
        <td>
              <%= link_to "Show", sel_course, class: "btn btn-primary" %>
            </td>
        <!--
            <td>
              <%= button_to "Delete", course_student,method: :delete, class: "btn btn-danger" %>
            </td>
        -->
        
      </tr>
      <% end %>
      <% end %>
  <% end %>
  </tbody>
</table>
