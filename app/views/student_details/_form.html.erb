<div class="form-container" style="max-width: 600px; margin: 0 auto;">
  <%= form_with(model: student_detail) do |form| %>
    <% if student_detail.errors.any? %>
      <div class="error-messages" style="color: red; margin-bottom: 20px;">
        <h2><%= pluralize(student_detail.errors.count, "error") %> prohibited this student_detail from being saved:</h2>
        <ul>
          <% student_detail.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :first_name, class: "form-label" %>
      <%= form.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :last_name, class: "form-label" %>
      <%= form.text_field :last_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :roll_no, class: "form-label" %>
      <%= form.text_field :roll_no, class: "form-control" %>
    </div>

    <div class="form-group">
    <%= form.label :gender, class: "form-label" %>
    <%= form.select :gender, options_for_select(['Male', 'Female', 'Other']), {}, class: "form-control" %>
  </div>
  

    <div class="form-group">
      <%= form.label :dob, class: "form-label" %>
      <%= form.date_field :dob, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :address, class: "form-label" %>
      <%= form.text_area :address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email, class: "form-label" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :phone, class: "form-label" %>
      <%= form.text_field :phone, class: "form-control" %>
    </div>

    <div class="form-group">
    <%= form.label :blood_group, class: "form-label" %>
    <%= form.select :blood_group, options_for_select(['A+', 'A-', 'B+', 'B-', 'AB+', 'AB-', 'O+', 'O-']), {}, class: "form-control" %>
  </div>


  <div class="form-group">
  <%= form.label :department, class: "form-label" %>
  <%= form.select :dept, options_for_select(['Computer Science', 'Mechanical Engineering', 'Electrical Engineering', 'Civil Engineering', 'Chemical Engineering', 'Mathematics', 'Physics', 'Chemistry']), {}, class: "form-control" %>
</div>

    <div class="form-group">
      <%= form.label :parent_name, class: "form-label" %>
      <%= form.text_field :parent_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :parent_phone_no, class: "form-label" %>
      <%= form.text_field :parent_phone_no, class: "form-control" %>
    </div>
    <div>
      <%= form.number_field :user_id, type: :hidden, value:current_user.id %>
    </div>
    <div>
      <%= form.submit "Submit", class: "btn btn-success" %>
    </div>
  </br>
    <div>
  <%= link_to "Back ", student_details_path, class: "btn btn-secondary" %>
</div>
  <% end %>
</div>
