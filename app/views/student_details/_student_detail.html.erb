<div class="container" style="max-width: 600px; margin: 0 auto;">
  <div id="<%= dom_id student_detail %>" style="border: 1px solid #ccc; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(0,0,0,0.1);">
    <h3 style="text-align: center; margin-bottom: 20px;">Student Details</h3>
    <p style="margin: 0 0 10px;">
      <strong>First name:</strong>
      <%= student_detail.first_name %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Last name:</strong>
      <%= student_detail.last_name %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Roll no:</strong>
      <%= student_detail.roll_no %>
    </p>
      <p style="margin: 0 0 10px;">
        <strong>Student Id:</strong>
        <%= student_detail.user_id %>
      </p>

    <p style="margin: 0 0 10px;">
      <strong>Gender:</strong>
      <%= student_detail.gender %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Dob:</strong>
      <%= student_detail.dob %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Address:</strong>
      <%= student_detail.address %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Email:</strong>
      <%= student_detail.email %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Phone:</strong>
      <%= student_detail.phone %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Blood group:</strong>
      <%= student_detail.blood_group %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Dept:</strong>
      <%= student_detail.dept %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Parent name:</strong>
      <%= student_detail.parent_name %>
    </p>

    <p style="margin: 0 0 10px;">
      <strong>Parent phone no:</strong>
      <%= student_detail.parent_phone_no %>
    </p>
  <% if current_user.id == student_detail.user_id %> 
    <%= link_to "Edit", edit_student_detail_path(student_detail), class: "btn btn-warning" %>
  <% else %>
  <%= link_to "Back ", student_details_path , class: "btn btn-secondary" %>
  <% end %>
  </div>
</div>
